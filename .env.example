# go-micro Registry Configuration
# Set these environment variables to enable etcd service discovery

# Enable etcd as the registry
MICRO_REGISTRY=etcd

# etcd server address(es)
# For local development:
MICRO_REGISTRY_ADDRESS=localhost:2379

# For production (multiple etcd nodes):
# MICRO_REGISTRY_ADDRESS=etcd1:2379,etcd2:2379,etcd3:2379

# Optional: Registry authentication (if enabled)
# MICRO_REGISTRY_USERNAME=admin
# MICRO_REGISTRY_PASSWORD=secret

# Database
TICKETING_DATABASE_HOST=localhost
TICKETING_DATABASE_PORT=5432
TICKETING_DATABASE_USER=postgres
TICKETING_DATABASE_PASSWORD=postgres

# Redis
TICKETING_REDIS_ADDRESS=localhost:6379
TICKETING_REDIS_PASSWORD=

# JWT
TICKETING_JWT_SECRET=your-super-secret-jwt-key-change-in-production
